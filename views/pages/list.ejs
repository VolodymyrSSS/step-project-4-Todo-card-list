<!DOCTYPE html>
<html lang="en">

<head>
  <% include ../partials/head %>
</head>

<body>
  <!-- <div class="modal fade" id="listModal" tabindex="-1" role="dialog" aria-labelledby="listModalTitle" aria-hidden="true"> -->
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content border-primary" data-id="">
      <div class="modal-header bg-warning">
        <i class="fas fa-list fa-2x text-primary"></i>
        <h5 class="modal-title ml-3" id="listModalTitle">List details</h5>
        <a href="/" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </a>
      </div>

      <div class="modal-body bg-info border-primary">
        <label for="themeList" class="badge badge-primary text-wrap">Theme of the list</label>
        <input type="text" class="form-control" name="themeList" id="themeList" placeholder="Some theme" required>

        <label for="itemsList" class="badge badge-primary text-wrap">Items of the list</label>
        <div id="itemsList">
          <div class="input-group mb-2">
            <div class="input-group-prepend">
              <div class="input-group-text">
                <input type="checkbox" id="checkItem0">
              </div>
            </div>
            <input type="text" class="form-control" id="textItem0">
          </div>
        </div>
        <button type="button" class="btn btn-primary" id="addItem">
          <i class="fas fa-plus"></i>
        </button>
        <button type="button" class="btn btn-primary" id="delItem">
          <i class="fas fa-minus"></i>
        </button>
      </div>

      <div class="modal-footer border-primary">
        <button type="button" class="btn btn-outline-danger btn-success" id="addList">
          <i class="fas fa-plus"></i>
          Save list
        </button>
      </div>

    </div>
  </div>
  <!-- </div> -->

  <% include ../partials/footer %>

</body>

</html>